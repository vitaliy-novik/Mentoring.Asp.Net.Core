@model Northwind.Core.Entities.Category

@{
    ViewBag.Title = "Edit category";
    ViewBag.Breadcrumb = new BreadcrumbItem
    {
        Display = "Components",
        Action = "Index",
        Controller = "Category",
        Id = ""
    };
}

<h2>@Model.CategoryName</h2>
<div class="col-sm-10">
    <span>@Model.Description</span>
</div>
<div class="row">
    <form method="post" enctype="multipart/form-data" asp-controller="Category" asp-action="Edit">
        <input asp-for="@Model.CategoryId" type="hidden" />
        <input asp-for="@Model.Description" type="hidden" />
        <input asp-for="@Model.CategoryName" type="hidden" />
        <div class="form-group">
            <div class="col-md-10">
                <img src="/images/@Model.CategoryId" class="img-fluid" alt="image">
                <input asp-for="@Model.Picture" type="file" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>