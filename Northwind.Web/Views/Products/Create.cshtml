@model CreateProductViewModel

@{ 
	ViewBag.Title = "Add product";
}

<h2>Create product</h2>

<form action="/" method="post">
	<div class="form-group row">
		<label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="ProductName" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="UnitPrice" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="UnitsInStock" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="UnitsInStock" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select asp-for="CategoryId" asp-items="@Model.Categories" class="custom-select"></select>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Save</button>
		</div>
	</div>
</form>
