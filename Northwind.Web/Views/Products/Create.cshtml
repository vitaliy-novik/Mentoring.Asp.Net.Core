@model ProductViewModel

@{ 
    ViewBag.Title = "Add product";
    ViewBag.Breadcrumb = "Create new";
}

<h2>Create product</h2>

<form method="post">
	<div class="form-group row">
		<label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-5">
			<input asp-for="ProductName" class="form-control" />
		</div>
		<span asp-validation-for="ProductName" class="col-sm-5"></span>
	</div>
	<div class="form-group row">
		<label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-5">
			<input asp-for="UnitPrice" class="form-control" />
		</div>
		<span asp-validation-for="UnitPrice" class="col-sm-5"></span>
	</div>
	<div class="form-group row">
		<label asp-for="UnitsInStock" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-5">
			<input asp-for="UnitsInStock" class="form-control" />
		</div>
		<span asp-validation-for="UnitsInStock" class="col-sm-5"></span>
	</div>
	<div class="form-group row">
		<label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-5">
			<select asp-for="CategoryId" asp-items="@ViewBag.CategoriesSelector" class="custom-select"></select>
		</div>
		<span asp-validation-for="CategoryId" class="col-sm-5"></span>
	</div>
	<div class="form-group row">
		<div class="col-sm-12">
			<input type="submit" name="save" value="Save" class="btn btn-primary" />
		</div>
	</div>
</form>
